.che-box
  margin 24px
  margin-top 32px
  margin-bottom 10px
  margin-right 24px
  box-shadow-bigger()
  background-color $default-dark-color
  border-radius 2px

.che-box-titlebox
  color $background-color
  height 40px
  font-size 1.2em
  padding-left 10px
  background-color $label-primary-color


.che-box md-card-content
  background-color $list-separator-color

.che-box-title-icon
  margin-right 10px

.che-box-title-bg-default
  background-color $default-dark-color

.che-box-title-bg-primary
  background-color $label-primary-color
